<h1>Posts da galera</h1>
<% @posts.each do |post|  %>
<div class="card">
  <h2> <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{post.user.github}", class: "img-circle" %>
  <%= post.user.name %></h2>
  <li><%= post.created_at  %>  </li>

 <p>Post: <%= post.content  %>
  <%= link_to 'Delete' , post_path(post), :class => "btn btn-primary",
      method: :delete,
      data: { confirm: "Are you sure?"}  %>
      <%= link_to "Edit", edit_post_path(post),
      :class => "btn btn-primary",
      method: :edit,
      data: {confirm: "Quer editar?"}%></p>

<% end %>
</div>

